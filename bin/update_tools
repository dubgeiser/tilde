#!/usr/bin/env bash

update_brew() {
    brew upgrade
    brew cask upgrade --greedy
}

brew_check_for_updates() {
    brew update
    echo
    echo cask
    echo '----'
    brew cask outdated --greedy
}

update_global_composer() {
    composer global update
}

update_vim() {
    cd "$HOME"/.vim/ || (echo 'CANNOT CD TO VIM DIRECTORY' && exit 1)
    ./update
}

pushd "$(pwd)" || (echo 'CANNOT PUSH WORKING DIR TO THE DIRSTACK' && exit 1)
update_global_composer
update_vim
brew_check_for_updates
popd || (echo 'CANNOT POP FROM DIRSTACK' && exit 1)
